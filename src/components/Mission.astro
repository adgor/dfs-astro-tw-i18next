---
import { t } from "i18next";
---

<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
  <div class="p-8 rounded shadow-lg filter shadow-brand/30 sm:p-16">
    <div class="flex flex-col lg:flex-row">
      <div class="mb-6 lg:mb-0 lg:w-1/2 lg:pr-5">
        <h2 class="font-sans text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl sm:leading-none">
        
          <span class="relative px-1">
            <div class="absolute inset-x-0 bottom-0 h-3 transform -skew-x-12 bg-brand"></div>
            <span class="relative inline-block ">
        {t("mission.title")}
            </span>
          </span>
        </h2>

      </div>
      <div class="lg:w-1/2">
        <p class="mb-4 text-base text-gray-700">
        {t("mission.body")}
        </p> <p class=" text-base text-gray-900 font-bold">
        {t("mission.message")}
        </p>
      </div>
    </div>
  </div>
</div
